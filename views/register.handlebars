<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Main CSS-->
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <!-- Font-icon css-->
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>Login - Vali Admin</title>
  </head>
  <body>
    <section class="material-half-bg">
      <div class="cover"></div>
    </section>
    <section class="login-content">
  
 <div class="tile"  style="padding:20px 40px; margin: 20px 0px;">
     <h3 class="tile-title" style="text-align: center; margin-bottom: 0px;">Register</h3>
        <div class="tile-body">
          <form class="form-horizontal" method="POST" action="/users/register">
             {{!-- <div class="form-group row">
                <label class="control-label">Name</label>
                  <input class="form-control" type="text" placeholder="Enter full name" autofocus name="name" required>
              </div> --}}
                <div class="form-group row">
                  <label class="control-label">User Name</label>
                    <input class="form-control" type="text" placeholder="Enter User Name" required  name="username">
                </div>
                <div class="form-group row">
                  <label class="control-label">Email</label>
                  
                    <input class="form-control" type="email" placeholder="Enter email address" required  name="email">
                 
                </div>
                <div class="form-group row">
                    <label class="control-label">Password</label>
                    <input class="form-control" type="password" placeholder="Password" required  name="password">
                </div>
                <div class="form-group row">
                    <label class="control-label">Confirm Password</label>
                    <input class="form-control" type="password" placeholder="Password" required name="password2">
                </div>
                <div class="tile-footer" style="margin-left: 40px">
                    <div class="row">
                        <div>
                            <button class="btn btn-primary" type="submit"><i class="fa fa-fw fa-lg fa-check-circle"></i>Register</button>&nbsp;&nbsp;&nbsp;<a class="btn btn-secondary" href="login"><i class="fa fa-fw fa-lg fa-times-circle"></i>Cancel</a>
                        </div>
                    </div>
                    <div class="row" >
                     <a href="login"><u>Already registred! Login Me</u> </a>
                    </div>
                </div>
    
              </form>
            </div>

          </div>

            {{!-- {{#if errors}}
                {{#each errors}}
                    <div class="alert alert-danger">{{msg}}</div>
                {{/each}}
            {{/if}} --}}
      </div>
           
 
    </section>
    <!-- Essential javascripts for application to work-->
    <script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>
    <!-- The javascript plugin to display page loading on top-->
    <script src="/js/plugins/pace.min.js"></script>
    <script type="text/javascript">
      // Login Page Flipbox control
      $('.login-content [data-toggle="flip"]').click(function() {
      	$('.login-box').toggleClass('flipped');
      	return false;
      });
    </script>
  </body>
</html>